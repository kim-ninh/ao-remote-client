<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="MyButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CircleButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/circle_button_size</item>
        <item name="android:layout_height">@dimen/circle_button_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/circle_button_background</item>
    </style>


    <style name="VerticalButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/vertical_button_size</item>
        <item name="android:layout_height">@dimen/vertical_button_size</item>
    </style>

    <style name="CentralButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/central_button_size</item>
        <item name="android:layout_height">@dimen/central_button_size</item>
    </style>

    <style name="GridTwoColButton" parent="MyButton">
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_width">@dimen/two_col_button_size</item>
        <item name="android:layout_height">@dimen/two_col_button_size</item>
    </style>

    <style name="ACRemoteButton" parent="MyButton">
        <item name="android:layout_height">@dimen/ac_remote_button_size</item>
    </style>

    <style name="FanRemoteButton" parent="MyButton">
        <item name="android:layout_height">@dimen/fan_remote_button_height</item>
    </style>

    <style name="TVRemoteTopButton" parent="MyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/tv_remote_top_button_height</item>
    </style>
</resources>
