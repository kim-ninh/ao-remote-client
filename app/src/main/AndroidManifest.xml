        android:icon="@drawable/ic_smart_home"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PickDeviceTypeActivity"></activity>
        <activity android:name=".RemoteControlActivity" />
        <activity android:name=".TvRemoteActivity" />
        <activity android:name=".FanRemoteActivity" />
        <activity android:name=".AcRemoteActivity" />
        <activity android:name=".ProjectorRemoteActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>